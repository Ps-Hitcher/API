<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - API</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar  navbar-expand-lg navbar-light  box-shadow mb-3 text-center align-content-center">
        <div class="container-fluid text-center">
            @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hitcher</a> *@
            <a class="navbar-brand" href="/">
                  <div class="logo-image">
                        <img src="~/img/nav.jpg" class="img-fluid">
                  </div>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon center"></span>
            </button>
            <div class="navbar-collapse  navbar  ">
                <ul class="nav navbar-nav navbar-center">
                    <li class="nav-item">

                        <a class="nav-link text-white text-center" asp-area="" asp-controller="Home" asp-action="Login">LOGIN</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white " asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Users">USERS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Trip">TRIP</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">PROFILE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Datecher">DATECHER</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - API - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/googleMapCreate.js" asp-append-version="true"></script>
    <script src="~/js/googleMapView.js" asp-append-version="true"></script>
    <script src="~/js/googleMapPreview.js" asp-append-version="true"></script>
    <script src="~/js/googleMapCommon.js" asp-append-version="true"></script>
    <script src="~/js/metaCalculation.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>