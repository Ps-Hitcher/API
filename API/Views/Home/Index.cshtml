@model List<WebApplication2.Models.User.UserModel>
@{
    ViewData["Title"] = "Home Page";
    ViewData["API_KEY"] = "AIzaSyBeiiVAS5Jmf-OW_KsR5jnzgA833PE5nng";
}
<script src="/js/Map_API.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyBeiiVAS5Jmf-OW_KsR5jnzgA833PE5nng&libraries=places"></script>
<script src="site.js"></script>

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link href="site.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

<div class="text-center">

    <body>
        <div class="logo">
            <h1 class="display-4">
                <img src="img/BlueLogo.jpg" alt="logo" width=350px height=350px>
            </h1>
        </div>
    </body>

</div>


<div class="grid-container">
    @* travel information - entered by the users *@
    <div class="item2">
        <div class="text-left">
            <form>
                 <label for="origin">Where are you coming from?</label><br>
                <input type="text" id="origin" placeholder="City name:" class="form-control1" required><br><br>
                <label for="destination">Where would you want to go?</label><br>
                <input type="text" id="destination" placeholder="City name:" class="form-control1" required><br><br/>

            </form>
            <div class="wrap">
                <button onclick="calcRoute()" type="button" id="submit" name="submit" class="travel">Submit</button>
                <button onclick="userLocation()" type="button" id="userLocation" name="userLocation" class="travel">Use your location</button>
            </div>
        </div>
        <div id="output">
        </div>
    </div>

    <div class="item3">
        <div id="googleMap">
        </div>
    </div>
 <div class="item4">
        <div class="container mt-5">
            <table class="table table-borderless table-responsive card-1 p-4">
                <thead>
                <tr class="border-bottom">
                    <th>
                        <div class="text-left">
                            <span class="ml-2">Driver</span>
                        </div>
                    </th>
                    <th>
                        <div class="text-center">
                            <span class="ml-2">From</span>
                        </div>
                    </th>
                    <th>
                        
                        <div class="text-center">
                            <span class="ml-2">To</span>
                        </div>
                    </th>
                    <th>
                        <div class="text-center">
                            <span class="ml-2">Time</span>
                        </div>
                    </th>
                    <th>
                        <div class="text-center">
                            <span class="ml-2">Action</span>
                        </div>
                    </th>
                </tr>
                </thead>
                @foreach (var user in Model)
                {
                    <tr class="border-bottom">
                        <td>
                     <div class="text-center">
                             <div class="p-2 d-flex align-items-center  mb-2">
                                 <img src="~/img/profile.jpg" width="40" class="rounded-circle">
                                 <div class="d-flex flex-column  p-2">
                                     <span class="d-block font-weight-bold">@Html.DisplayFor(modelItem => user.Name) @Html.DisplayFor(modelItem => user.Surname) </span>
                                     <small class="text-mute">@Html.DisplayFor(modelItem => user.Email)</small>
                                 </div>
                             </div>
                         </div>
                     <td>
                            <div class="p-2 d-flex flex-column">
                                <div class="text-center">
                                    <span>Vilnius</span>
                                </div>
                            </div>
                        </td>
                          <td>
                              <div class="p-2 d-flex flex-column">
                                  <div class="text-center">
                                      <span>Ukmergė</span>
                                  </div>
                              </div>
                          </td>
                     <td>
                            <div class="p-2">
                                <div class="text-center">
                                    <small>2:30PM</small>
                                </div>
                            </div>
                     <td>
                            <div class="text-center">
                            <a>
                                <button href="#myModal" data-toggle="modal" type="button" id="Confirm" name="Confirm" class="Confirm">CHOOSE A TRIP</button>
                            </a>
                            </div>
                            <div id="myModal" class="modal fade">
                                <div class="modal-dialog modal-confirm">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div class="icon-box">
                                                <i class="material-icons">&#xebf0;</i>
                                            </div>
                                            <h4 class="modal-title w-100">AWESOME!</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p class="text-center">SUCCESSFULLY CHOSEN TRIP!</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
